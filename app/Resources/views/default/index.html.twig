{% extends 'base.html.twig' %}

{% block title %}Symfony - TodoMVC{% endblock %}

{% block body %}

  <div id="logo"></div>

    <div id="content">
        {% block content %}
            <section id="todoapp">
                <header id="header">
                    <h1>todos</h1>
                        <form  id="new-todo" action="" method="post">

                        </form>
                </header>            
            </section>
            <section id="main">
                <form id="formtoggle" action="">
                    <input id="toggle-all" type="checkbox">
                </form>
                <label for="toggle-all">Mark all as complete</label>
                <ul id="todo-list">
                    <li>
                        <div class="view">
                            <a class="btnedit" href="#">
                                <input class="toggle" type="checkbox" >
                            </a>
                            <div class="todolist-label">
                                <label>Todo</label>
                                <form action="" method="post">
                                    <button class="destroy"></button>
                                </form>
                            </div>
                        </div>
                      <input class="edit" value="">
                    </li>
                </ul>
            </section>
            <footer id="form-footer">
                <span id="count-todos"> item left</span>
                <a id="clear-completed" href="">Clear completed</a>
            </footer>
        {% endblock %}
    </div>

    <footer id="footer">
        <p>Double-click to edit a todo</p>
        <p>Written by <a href="https://github.com/dvdoliveira">Deivide Oliveira</a></p>
    </footer>
  </div> 

{% endblock %}