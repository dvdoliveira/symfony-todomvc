{% extends 'base.html.twig' %}

{% block title %}Symfony - TodoMVC{% endblock %}

{% block body %}

    <div id="logo"></div>

        <div id="content">
            {% block content %}
                <section id="todoapp">
                    <header id="header">
                        <h1>todos</h1>
                            <form  id="new-todo" action="{{ path('todo_create') }}" method="post" {{ form_enctype(form) }}>
                                {{ form_errors(form) }}
                                {{ form_row(form) }}

                                <div style="display:none;">
                                    {{ form_rest(form) }}
                                </div>
                            </form>
                    </header>            
                </section>
                <section id="main">
                    <form id="formtoggle" action="{{ path('todo_toggle') }}">
                        <input id="toggle-all" type="checkbox">
                    </form>
                    <label for="toggle-all">Mark all as complete</label>
                    <ul id="todo-list">
                        {% for entity in entities %}
                            <li data-todoid="lili" {% if entity.completed %}class="completed" {% endif %} data-id="{{ entity.id }}">
                                <div class="view" data-todoid="divdiv">
                                    <a class="btnedit" href="#" data-todoid="{{ entity.id }}">
                                        <input class="toggle" type="checkbox" {% if entity.completed %} checked {% endif %} >
                                    </a>
                                    <div class="todolist-label">
                                        <label>{{ entity }}</label>
                                        <form action="" method="post">
                                            <button class="destroy"></button>
                                        </form>
                                    </div>
                                </div>
                              <input class="edit" value="{{ entity }}">
                            </li>
                        {% endfor %}
                    </ul>
                </section>
                <footer id="form-footer">
                    <span id="count-todos"> item left</span>
                    <a id="clear-completed" href="">Clear completed</a>
                </footer>
            {% endblock %}
        </div>

        <footer id="footer">
            <p>Double-click to edit a todo</p>
            <p>Written by <a href="https://github.com/dvdoliveira">Deivide Oliveira</a></p>
        </footer>
    </div> 

{% endblock %}